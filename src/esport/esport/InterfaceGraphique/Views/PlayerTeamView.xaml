<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:esport.InterfaceGraphique.ViewModels"
             x:Class="esport.Views.PlayerTeamView"
             Title="Création d'un joueur">
    <ContentPage.BindingContext>
        <local:PlayerTeamViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <Label Text="Gestion des équipes" FontSize="Large" HorizontalOptions="Center"/>
        <Label Text="Ajouter une équipe" />
        <Entry Placeholder="Nom de l'équipe" Text="{Binding TeamName}" />
        <Button Text="Ajouter équipe" Command="{Binding AddTeamCommand}" />

        <ListView ItemsSource="{Binding Teams}" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>